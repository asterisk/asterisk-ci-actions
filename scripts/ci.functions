#
# This file contains useful Bash functions
# and can be "source"d from the scripts.
#

[ -n "$CI_FUNCTIONS_INCLUDED" ] && {
	echo "ci.functions can't be included more than once" >&2
	exit 1
}

CI_FUNCTIONS_INCLUDED=1
PROGNAME=$(basename $(readlink -fn $0))

echo "====== Entering ${PROGNAME}" >&2
trap 'echo "====== Exiting ${PROGNAME}" >&2' EXIT

declare -a POSITIONAL_ARGS
for a in "$@" ; do
	OPTION_COUNT+=1
	case "$a" in
		--*=*)
			[[ $a =~ --([^=]+)=(.*) ]]
			l=${BASH_REMATCH[1]//-/_}
			r=${BASH_REMATCH[2]}
			eval ${l^^}=\"$r\"
			;;
		--*)
			[[ $a =~ --(.+) ]]
			l=${BASH_REMATCH[1]//-/_}
			eval ${l^^}=true
			;;
		--no-*)
			[[ $a =~ --no-(.+) ]]
			l=${BASH_REMATCH[1]//-/_}
			eval ${l^^}=false
			;;
		*)
			POSITIONAL_ARGS+=($a)
			;;
	esac
done

runner() {
	( set -x ; ${@} )
}

begin_group() {
	${GITHUB_ACTIONS:-false} || return 0
	echo "::group::$1"
	trap end_group EXIT
}

end_group() {
	${GITHUB_ACTIONS:-false} || return 0
	trap - EXIT
	echo "::endgroup::"
}

asterisk_corefile_glob() {
	local pattern=$(/sbin/sysctl -n kernel.core_pattern)

	# If core_pattern is a pipe there isn't much we can do
	if [[ ${pattern:0:1} == "|" ]] ; then
		echo "core*"
	else
		astpath=$(which asterisk)
		pattern=${pattern/\%e/asterisk}
		pattern=${pattern/\%f/asterisk}
		pattern=${pattern/\%E/${astpath//\//\!}}
		echo "${pattern%%%*}*"
	fi
}

export_to_github() {
	out=${GITHUB_ENV:-/dev/stdout}
	for var in "$@" ; do
		declare -n vc=$var
		echo "$var=$vc" >> "$out"
	done
}

printvars() {
	for var in "$@" ; do
		declare -n vc=$var
		echo "$var=$vc" >&2
	done
}

assert_env_variable() {
	declare -n VAR="$1"
	if [ -z "${VAR}" ] ; then
		echo "::error::Missing $1 in environment" >&2
		return 1
	fi
}

assert_env_variables() {
	printit=false
	rc=0
	[ "$1" == "--print" ] && { printit=true ; shift ; }
	for var in "$@" ; do
		declare -n vc=$var
		if [ -z "${vc}" ] ; then
			echo "::error::Missing $var in environment" >&2
			rc=1
			continue
		fi
		$printit && echo "$var=$vc" >&2
	done
	return $rc
}

debug_out() {
	IFS=$'\n'
	echo "${*/#*/${PROGNAME}: &}" >&2
	unset IFS
}

error_out() {
	IFS=$'\n'
	echo "::error::${*/#*/${PROGNAME}: &}" >&2
	unset IFS
}

log_error_msgs() {
	IFS=$'\n'
	echo "::error::${*/#*/${PROGNAME}: &}" >&2
	[ -n "${LOG_FILE}" ] && {
		rp=$(realpath -m "${LOG_FILE}")
		logdir=$(dirname "${rp}")
		[ ! -d "${logdir}" ] && mkdir -p "${logdir}"
		echo "${*/#*/${PROGNAME}: &}" >> "${LOG_FILE}"
	}
	unset IFS
}

log_failed_tests() {
	IFS=$'\n'
#	echo "::error::${*/#*/FAILED TEST: &}" >&2
	[ -n "${LOG_FILE}" ] && {
		rp=$(realpath -m "${LOG_FILE}")
		logdir=$(dirname "${rp}")
		[ ! -d "${logdir}" ] && mkdir -p "${logdir}"
		echo "${*/#*/FAILED TEST: &}" >> "${LOG_FILE}"
	}
	unset IFS
}
